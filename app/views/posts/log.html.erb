<% content_for(:title, t('.title')) %>

<% @posts.each do |date, posts| %>
  <section class="mb-8">
    <h3 class="text-lg font-semibold mb-2">­ЪЊЁ <%= date.strftime('%Y/%m/%d') %></h3>

    <% grouped_by_slot = posts.group_by(&:time_slot) %>

    <% Post.time_slots.keys.each do |slot| %>
      <% slot_posts = grouped_by_slot[slot] || [] %>
      <div class="ml-4 mb-2 bg-white rounded">
        <p class="font-semibold"><%= t("time_slots.#{slot}") %></p>
        <% if slot_posts.any? %>
          <ul class="list-none ml-5 text-gray-700">
            <% slot_posts.each do |post| %>
              <li><%= post.tweet %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-400 ml-5">сЂ▓сЂесЂЊсЂесЂфсЂЌ</p>
        <% end %>
      </div>
    <% end %>
  </section>
<% end %>
