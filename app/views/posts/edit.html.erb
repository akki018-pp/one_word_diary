<% content_for(:title, t('.title')) %>

<div class="w-full px-4 sm:px-8 md:px-16 lg:px-32 xl:px-48">

  <%= form_with model: @post, local: true do |f| %>
    <div class="mb-6 text-center">
      <%= f.label :tweet, '本当に言いたかったことはなに？', class: "text-lg font-medium text-gray-700 mb-2 block" %>
      <%= f.text_field :tweet, class: "w-144 border border-gray-300 bg-white rounded-full px-6 py-4 text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: t('.tweet') %>
    </div>

    <div class="flex flex-col mx-auto text-center w-72">
      <%= f.submit "ひとことなおし", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold px-8 py-3 rounded-full shadow transition mb-4" %>
      <%= link_to "なかったことに", @post, method: :delete, class: "mb-5 bg-red-400 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full" %>
      <%= link_to "なんでもないよ", posts_path, class: "mb-5 bg-green-400 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-full" %>
    </div>
  <% end %>
</div>