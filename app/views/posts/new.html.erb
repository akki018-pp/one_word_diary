<% content_for(:title, t('.title')) %>

<div class="w-full px-4 sm:px-8 md:px-16 lg:px-32 xl:px-48">
  <h2 class="text-2xl font-bold text-blue-600 my-6 text-center">今の気持ちをひとことで</h2>

  <%= form_with model: @post, local: true do |f| %>
    <div class="mb-6 text-center">
      <%= f.label :tweet, '何を思った？何を感じた？', class: "text-lg font-medium text-gray-700 mb-2 block" %>
      <%= f.text_field :tweet, class: "w-144 border border-gray-300 bg-white rounded-full px-6 py-4 text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: t('.tweet') %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "投稿する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold px-8 py-3 rounded-full shadow transition" %>
    </div>
  <% end %>
</div>